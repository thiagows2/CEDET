<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= "Alunos em destaques" %></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
              <th>Nome</th>
              <th>Escola</th>
              <th>Professor</th>
          </tr>
      </thead>
      <tbody>
          <% @students_highlights.each do |highlights| %>
          <tr>
              <td><%= highlights.student_name %></td>
              <td><%= highlights.school_name %></td>
              <td><%= highlights.teacher_name %></td>
          </tr>
          <% end %>
      </tbody>
  </table>
</div>