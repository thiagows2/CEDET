<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%="Listando Alunos" %></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
              <th>Nome</th>
              <th>Escola</th>
              <th>Professor</th>
              <th>
                  <%= link_to new_admins_backoffice_student_path, class:"btn btn-success btn-circle btn-sm" do %>
                  <i class="fa fa-plus"></i>
                  <%end%>
              </th>
          </tr>
      </thead>
      <tbody>
          <% @students.each do |students| %>
          <tr>
              <td><%= students.student_name %></td>
              <td><%= students.school_name %></td>
              <td><%= students.teacher_name %></td>
              <td style="width: 100px">
                
                <%= link_to edit_admins_backoffice_student_path(students), class:"btn btn-primary btn-circle btn-sm" do %>
                <i class="fa fa-edit"></i>
                <%end%>
                
                <%= link_to admins_backoffice_student_path(students), method: :delete, 
                  class:"btn btn-danger btn-circle btn-sm", 
                  data: { confirm: t('messages.confirm_with', item: students.student_name.truncate(30)) } do %>
                  
                <i class="fa fa-minus"></i>
                <%end%>
              
              </td>
          </tr>
          <% end %>
      </tbody>
  </table>
    <div class="text-center"> 
      <%= paginate @students %>
    </div>
</div>