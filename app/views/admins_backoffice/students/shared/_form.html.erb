
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= action_message %></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= "#{action_message} Aluno" %> 
            </div>
            <hr>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_with(model: [ :admins_backoffice, @student ], local: true)  do |form| %>
                        
                            <div class="form-group">
                                <%= form.label "Nome" %>
                                <%= form.text_field :student_name, class:"form-control", placeholder: "Nome do aluno" %>
                            </div>
                            
                            <div class="form-group">
                                <%= form.label "Escola" %>
                                <%= form.text_field :school_name, class:"form-control", placeholder: "Nome da escola"  %>
                            </div>

                            <div class="form-group">
                                <%= form.label "Professor" %>
                                <%= form.text_field :teacher_name, class:"form-control", placeholder: "Nome do professor" %>
                            </div>

                            <button type="submit" class="btn btn-success btn-icon-split">
                                <span class="icon text-white-50">
                                    <i class="fas fa-check"></i>
                                </span>
                                <span class="text"><%= t('attributes.buttons.confirmation') %></span>
                            </button>
                            
                            <%= link_to admins_backoffice_students_path, class:"btn btn-danger btn-icon-split" do %>
                                <span class="icon text-white-50">
                                    <i class="fas fa-trash"></i>
                                </span>
                                <span class="text"><%= t('attributes.buttons.ignore') %></span>
                            <%end%>
                        <%end%>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>